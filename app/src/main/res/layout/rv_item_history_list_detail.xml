<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_view">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/ll_rv_history_list_detail"
    android:layout_marginLeft="16dp">
        <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/baseline_person_black_18dp"
                android:id="@+id/iv_rv_history_profile"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1" android:gravity="center_vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="title"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_rv_history_title"
                        android:textSize="16dp"
                        android:textStyle="bold" android:textColor="#484848"/>
                <TextView
                        android:text="1999.01.01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/tv_rv_history_date"
                        android:textSize="12dp" android:textColor="#CECECE"/>
            </LinearLayout>
            <TextView
                    android:text="time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv_rv_history_time"
                    android:textColor="#484848"
                    android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>