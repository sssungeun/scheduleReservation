<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginTop="12dp"
              android:orientation="horizontal"
              android:dividerPadding="1dp">
    <RelativeLayout
            android:id="@+id/rl_tabbar_send_select_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
                android:id="@+id/txt_tabbar_send_select_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:lineSpacingExtra="11sp"
                android:text="개인"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:fontFamily="@font/noto_sans_kr_bold_hestia"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_tabbar_send_select_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
                android:id="@+id/txt_tabbar_send_select_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:lineSpacingExtra="11sp"
                android:text="그룹"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:fontFamily="@font/noto_sans_kr_bold_hestia"/>
    </RelativeLayout>
</LinearLayout>