
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:tools="http://schemas.android.com/tools"

              android:layout_width="match_parent"

              android:layout_height="match_parent"

              android:orientation="vertical"

>
    <RelativeLayout
            android:id="@+id/rl_edit_artist_profile_setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp">
        <ImageView
                android:id="@+id/btn_send_detail_input_btn_back"
                android:src="@drawable/outline_clear_black_18dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"/>

        <ImageView
                android:id="@+id/btn_send_detail_input_btn_next"
                android:src="@drawable/btn_arrow_next"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"/>
    </RelativeLayout>

    <EditText
            android:id="@+id/edit_signup_act_email"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginTop="50dp"
android:layout_gravity="center"
            android:gravity="center"
            android:hint="일정 제목"
            android:background="@drawable/signup_focus_on"
            android:layout_marginHorizontal="16dp"
            android:textColor="#000000"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
    android:layout_marginLeft="16dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="30dp"
                      android:orientation="horizontal"
                      android:layout_marginLeft="30dp">
    <Button
            android:id="@+id/btnchangedate"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:onClick="mOnClick"

            android:text="날짜 설정"

    />

    <TextView

            android:id="@+id/txtdate"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
            android:textSize="20sp"

            android:text="date"

    />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="30dp"
                      android:orientation="horizontal"
                      android:layout_marginLeft="30dp">
    <Button
            android:id="@+id/btnchangetime"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:onClick="mOnClick"

            android:text="시간 설정"

    />

    <TextView

            android:id="@+id/txttime"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:text="time"

    />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="30dp"
                      android:orientation="horizontal"
                      android:layout_marginLeft="30dp">
        <Button
                android:id="@+id/btnchangeplace"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:onClick="mOnClick"

                android:text="장소 설정"

        />

            <EditText

                    android:id="@+id/txtplace"

                    android:layout_width="172dp"

                    android:layout_height="wrap_content"

                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="place"

            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="30dp"
                      android:orientation="horizontal"
                      android:layout_marginLeft="30dp">
        <Button
                android:id="@+id/btnsettingalarm"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:onClick="mOnClick"

                android:text="알림 설정"

        />


        <TextView

                android:id="@+id/txtalarmTime"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="80dp"
                android:text="alarmTime"/>
<!--몇분전-->
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:track="@drawable/switch_track_selector"
                android:thumb="@drawable/switch_thumb"
        />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="30dp"
                      android:orientation="horizontal"
                      android:layout_marginLeft="30dp">
        <Button
                android:id="@+id/btnmultiselect"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:onClick="mOnClick"

                android:text="중복 허용"

        />

        <TextView

                android:id="@+id/txtmultiselect"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:text="multiSelect"
                android:layout_marginRight="80dp"


        />
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:track="@drawable/switch_track_selector"
                android:thumb="@drawable/switch_thumb"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



