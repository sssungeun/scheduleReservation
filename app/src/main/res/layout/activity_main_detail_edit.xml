
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:tools="http://schemas.android.com/tools"

              android:layout_width="match_parent"

              android:layout_height="match_parent"

              android:orientation="vertical"

>
    <RelativeLayout
            android:id="@+id/rl_main_detail_edit"
            android:layout_width="match_parent"
            android:layout_height="56dp">
        <ImageView
                android:id="@+id/btn_main_detail_edit_close"
                android:src="@drawable/outline_clear_black_18dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>


        <ImageView
                android:id="@+id/btn_main_detail_edit_done"
                android:src="@drawable/outline_done_black_18dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="30dp"
                      android:layout_marginLeft="70dp">
            <TextView
                    android:id="@+id/tv_main_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_medium_hestia"

                    android:text="Title"
                    android:textColor="#000000"
                    android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="30dp"
                      android:orientation="horizontal"
                      android:layout_marginLeft="30dp">
            <ImageView
                    android:id="@+id/iv_main_detail_date"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/clock_time_5025"/>
            <TextView
                    android:id="@+id/tv_main_detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_medium_hestia"
                    android:text="날짜"
                    android:layout_gravity="center"

                    android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginLeft="30dp">

            <TextView
                    android:id="@+id/tv_main_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_medium_hestia"
                    android:text="시간"
                    android:layout_marginLeft="44dp"

                    android:textSize="20dp"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="25dp">
            <ImageView android:layout_width="36dp"
                       android:layout_height="36dp"
                       android:layout_marginRight="16dp"
                       android:src="@drawable/mapmarker_120273"
                       android:id="@+id/iv_main_detail_edit_place"/>

            <TextView
                    android:id="@+id/tv_main_detail_edit_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_medium_hestia"
                    android:text="장소"
                    android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp">
            <ImageView android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:layout_gravity="center"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/alarmclockalarmclock_relojdespertador_alarma_4542"
                       android:id="@+id/iv_main_detail_edit_alarm_select"/>

            <TextView
                    android:id="@+id/tv_main_detail_edit_alarm_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_medium_hestia"
                    android:text="알림선택"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="30dp">
            <ImageView android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:layout_gravity="center"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/star_favorite_5754"
                       android:id="@+id/iv_main_detail_edit_multi_select"/>
            <TextView
                    android:id="@+id/tv_main_detail_edit_multi_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_medium_hestia"
                    android:text="중복허용"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="26dp">
            <ImageView android:layout_width="34dp"
                       android:layout_height="34dp"
                       android:layout_gravity="center"
                       android:layout_marginRight="16dp"
                       android:src="@drawable/baseline_person_black_18dp"
                       android:id="@+id/iv_main_detail_edit_response"/>
            <TextView
                    android:id="@+id/tv_main_detail_edit_response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_medium_hestia"
                    android:text="응답현황"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>