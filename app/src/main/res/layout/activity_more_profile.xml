<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <ImageView android:layout_width="match_parent"
                       android:layout_height="206dp"
                       android:scaleType="fitXY"
                       android:background="@color/cadetblue"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/cv_edit_frag_artist_background_photo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/btn_login_edit_photo"
                        android:layout_marginTop="166dp"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                />
            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/rl_edit_artist_profile_setting_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                <ImageView
                        android:id="@+id/img_profile_back"
                        android:src="@drawable/btn_arrow_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:lineSpacingExtra="6sp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:text="프로필 편집"/>

            </RelativeLayout>

            <RelativeLayout

                    android:layout_marginTop="76dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true">
                <ImageView
                        android:id="@+id/cv_edit_frag_profile_img"
                        android:src="@drawable/image_120189"
                        android:layout_centerVertical="true"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                />
                <ImageView
                        android:id="@+id/cv_edit_artist_frag_profile_photo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/btn_login_edit_photo"
                        android:layout_marginTop="73dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_alignParentRight="true"
                />

            </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginTop="332dp"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="11sp"
                    android:fontFamily="@font/noto_sans_kr_bold_hestia"
                    android:text="이름"
                    android:layout_marginLeft="16dp"
            />

            <LinearLayout
                    android:id="@+id/ll_edit_profile_nickname"
                    android:layout_width="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_height="54dp"
                    android:orientation="vertical"
            >



                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="3dp"
                >
                    <EditText
                            android:id="@+id/edit_profile_name"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="16dp"
                            android:textColor="#ffffff"
                    />



                </RelativeLayout>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-8글자 사이로 한글과 영어로 숫자로만 입력해주세요"
                        android:textColor="#9e9e9e"
                        android:textSize="12sp"
                        android:layout_below="@+id/edit_profile_name"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/noto_sans_kr_regular_hestia"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="16dp"
                />


            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="11sp"
                    android:fontFamily="@font/noto_sans_kr_bold_hestia"
                    android:text="이메일"
                    android:layout_marginLeft="16dp"
            />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="3dp"
            >
                <EditText
                        android:id="@+id/edit_profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginHorizontal="16dp"
                        android:textColor="#ffffff"
                />



            </RelativeLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="11sp"
                    android:fontFamily="@font/noto_sans_kr_bold_hestia"
                    android:text="생년월일"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="11sp"
                    android:fontFamily="@font/noto_sans_kr_bold_hestia"
                    android:text="로그아웃"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="11sp"
                    android:fontFamily="@font/noto_sans_kr_bold_hestia"
                    android:text="계정삭제"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
            />
        </LinearLayout>
        </RelativeLayout>

</LinearLayout>

